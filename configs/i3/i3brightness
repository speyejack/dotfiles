#!/bin/sh

case "$1" in
	increase10)
		xbacklight -inc 10%
		;;
	decrease10)
		xbacklight -dec 10%
		;;
	increase1)
		xbacklight -inc 1%
		;;
	decrease1)
		xbacklight -dec 1%
		;;
	max)
		xbacklight -set 100%
		;;
	min)
		xbacklight -set 1%
		;;
	none)
		xbacklight -set 0%
		;;
	*)
        echo "Usage: $0 {increase|decrease|max|min|none}"
		exit 2
esac
exit 0
